# freshshell.com
#
# Examples:
#
#   fresh twe4ked/dotfiles shell/functions/\*
#   fresh jasoncodes/dotfiles shell/aliases/rails.sh
#   fresh jasoncodes/dotfiles config/tmux.conf --file
#
# See http://freshshell.com/readme for documentation.

# bin commands
fresh-options --bin
  fresh freshshell/fresh bin/fresh
  fresh clvv/fasd fasd
  fresh klausi/pareviewsh pareview.sh
fresh-options

#use own terminator config but keep it editable https://github.com/freshshell/fresh/wiki/Frequently-Asked-Questions#writeable-files
ln -sf ~/.dotfiles/config/terminator/config ~/.config/terminator/config

# Prezto zsh config
fresh sorin-ionescu/prezto . --file=~/.zprezto/
fresh_after_build() {
if [ -z "${updated_submodules+1}" ]; then
cd ~/.fresh/source/sorin-ionescu/prezto/ && git pull && git submodule update --init --recursive
export updated_submodules=0
fi
if [ "$updated_submodules" -eq 0 ]; then
export updated_submodules=$[updated_submodules+1]
~/bin/fresh
fi
unset updated_submodules
}
# Config
fresh-options --file
  fresh profile
  #zsh runcoms
  fresh zsh/\*
  # git configuration
  fresh config/git/gitconfig
fresh-options

# adding autocompletions to shell.sh
fresh freshshell/fresh contrib/completion/fresh-completion.zsh --file=completion/_fresh
#fresh twe4ked/dotfiles shell/zsh/zsh-syntax-highlighting.zsh
fresh chrisallenlane/cheat cheat/autocompletion/cheat.zsh


#Load all of my functions into .fresh/build/shell.sh
fresh shell/functions/\*
#Load other people's functions into .fresh/build/shell.sh
fresh twe4ked/dotfiles shell/functions/pubkey.sh

#Helpful CLI Apps
#git achievements
#fresh drupallerina/git-achievements . --file=git-achievements/
#fresh drupallerina/git-achievements git-achievements --bin
# Commandline Fu http://linuxundich.de/ubuntu/bropages-und-commandlinefu-com-liefern-beispiele-zu-terminalbefehlen-auch-aus-dem-terminal-heraus/
fresh samirahmed/fu . --file=~/fu/
#cheat
#fresh chrisallenlane/cheat . --file=src/cheat/
# emacs and rvm
fresh senny/rvm.el rvm.el --file=~/.emacs.d/rvm/rvm.el

# VIMRC
fresh-options --file=~/.vimrc --marker='"'
  fresh vim/\*

fresh-options

#load plugins via pathogen managed by fresh
fresh tpope/vim-pathogen autoload/pathogen.vim --file=~/.vim/autoload/pathogen.vim
#get drupal vimrc as plugin
fresh http://git.drupal.org/project/vimrc.git . --file=~/.drush/vimrc/ --ref=7.x-1.x
#ln -sf ~/.drush/vimrc/bundle/vim-plugin-for-drupal ~/.vim/bundle/vim-plugin-for-drupal
