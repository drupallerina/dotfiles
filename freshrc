# freshshell.com
#
# Examples:
#
#   fresh twe4ked/dotfiles shell/functions/\*
#   fresh jasoncodes/dotfiles shell/aliases/rails.sh
#   fresh jasoncodes/dotfiles config/tmux.conf --file
#
# See http://freshshell.com/readme for documentation.

# bin commands
fresh-options --bin
  fresh freshshell/fresh bin/fresh
  fresh clvv/fasd fasd
  fresh klausi/pareviewsh pareview.sh --ref=7.x-1.x
  fresh alicraigmile/show-wip show-wip
fresh-options

#use own terminator config but keep it editable https://github.com/freshshell/fresh/wiki/Frequently-Asked-Questions#writeable-files
ln -sf ~/.dotfiles/config/terminator/config ~/.config/terminator/config


# Prezto zsh config
fresh rosenstrauch/prezto . --file=~/.zprezto/ --ref=709e88b --ignore-missing

fresh_after_build() {
chmod +x $HOME/.fresh/build/src/PHP_CodeSniffer/scripts/phpcs
chmod +x $HOME/.fresh/build/src/PHP_CodeSniffer/scripts/phpcbf

phpcs --config-set installed_paths ~/.fresh/build/src/PHP_CodeSniffer/CodeSniffer/Standards

if [ -z "${updated_submodules+1}" ]; then
cd ~/.fresh/source/rosenstrauch/prezto/ && git pull && git submodule update --init --recursive
export updated_submodules=0
fi
if [ "$updated_submodules" -eq 0 ]; then
export updated_submodules=$[updated_submodules+1]
~/bin/fresh
fi
unset updated_submodules
}

# Config
fresh-options --file
  fresh profile
  #zsh runcoms
  fresh zsh/\*
  # git configuration
  fresh config/git/gitconfig
fresh-options

# adding autocompletions to shell.sh
fresh freshshell/fresh contrib/completion/fresh-completion.zsh --file=completion/_fresh
#fresh twe4ked/dotfiles shell/zsh/zsh-syntax-highlighting.zsh
#fresh chrisallenlane/cheat cheat/autocompletion/cheat.zsh

#Load my aliases
fresh shell/aliases.sh

#Load all of my functions into .fresh/build/shell.sh
fresh shell/functions/\*
#Load other people's functions into .fresh/build/shell.sh
fresh twe4ked/dotfiles shell/functions/pubkey.sh

